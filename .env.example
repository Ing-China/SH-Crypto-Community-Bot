# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT put real secrets in this file - it will be committed to git

# Facebook API Configuration
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
FACEBOOK_PAGE_ID=your_facebook_page_id_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Group IDs (get from: https://api.telegram.org/bot<TOKEN>/getUpdates)
TELEGRAM_SH_NEWS_GROUP_ID=your_news_group_id_here
TELEGRAM_SH_COMMUNITY_GROUP_ID=your_community_group_id_here
TELEGRAM_SH_CRYPTO_LESSON_GROUP_ID=your_crypto_lesson_group_id_here

# Cloudflare Resource IDs
KV_NAMESPACE_ID=your_kv_namespace_id_here
D1_DATABASE_ID=your_d1_database_id_here

# How to get these values:
# 1. Facebook: https://developers.facebook.com/
# 2. Telegram Bot: https://t.me/BotFather
# 3. Group IDs: Add bot to groups, send messages, check getUpdates
# 4. Cloudflare IDs: From your Cloudflare dashboard